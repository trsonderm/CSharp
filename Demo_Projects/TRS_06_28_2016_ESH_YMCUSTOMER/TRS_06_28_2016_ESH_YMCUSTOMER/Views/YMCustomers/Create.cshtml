@using TRS_06_28_2016_ESH_YMCUSTOMER.Helpers;
@using System.Reflection;
@model TRS_06_28_2016_ESH_YMCUSTOMER.Models.YMCustomersCreateViewModel
@{
    ViewBag.Title = "Create";
    List<PropertyInfo> list = ViewBag.OrderedList;
    
}

<h2>Create</h2>
<style>
    .hidden {
        display: none;
    }
</style>


@using (Html.BeginForm())
{

    <div class="form-group">
        @foreach (var m in list)
        {

        <div class="control-label col-md-2">@Labeler.Label(m)</div>
        <div class="form-control">@Editor.EditField(m, "")</div>
        }
    </div>


    <button ="submit" class="btn btn-primary">Create</button>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



